# Run with:
# docker compose --env-file env/vps.env -f docker-compose.vps.yml up -d

# version: "3.9"

################################################################################
# SOCIALX — VPS DEPLOYMENT STACK (Docker Compose)
# ------------------------------------------------------------------------------
# Services included:
# - reverse-proxy (Traefik)
# - postgres
# - redis
# - minio (S3 local)
# - kafka (Redpanda, very light)
# - user-service (Django REST)
# - feed-service (FastAPI)
# - worker (Celery)
# - frontend (NextJS SSR)
#
# Reads environment from:
#   env/vps.env
#
# Registry used:
#   ${DOCKER_REGISTRY_HOST}
################################################################################

services:

  ##############################################################################
  # REVERSE PROXY (Traefik)
  ##############################################################################
  traefik:
    image: traefik:v3.0
    container_name: traefik
    command:
      - "--providers.docker"
      - "--entrypoints.web.address=:80"
      - "--api.insecure=true"
    ports:
      - "80:80"
      - "8080:8080"     # dashboard
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    restart: always
    depends_on:
      - user-service
      - feed-service
      - frontend

  ##############################################################################
  # POSTGRES (MAIN DB)
  ##############################################################################
  postgres:
    image: postgres:15
    container_name: postgres
    restart: always
    env_file: env/vps.env
    environment:
      POSTGRES_DB: ${POSTGRES_DB}
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER}"]
      interval: 10s
      retries: 5

  ##############################################################################
  # REDIS (Cache + Celery Broker)
  ##############################################################################
  redis:
    image: redis:7
    container_name: redis
    restart: always
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data

  ##############################################################################
  # MINIO (Local S3)
  ##############################################################################
  minio:
    image: minio/minio:latest
    container_name: minio
    command: server /data --console-address ":9001"
    restart: always
    env_file: env/vps.env
    ports:
      - "9000:9000"
      - "9001:9001"
    environment:
      MINIO_ROOT_USER: ${MINIO_ROOT_USER}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD}
    volumes:
      - minio_data:/data

  ##############################################################################
  # REDPANDA (Kafka alternative — lightweight)
  ##############################################################################
  kafka:
    image: docker.redpanda.com/redpandadata/redpanda:v23.2.9
    container_name: redpanda
    restart: always
    command:
      - redpanda start
      - --overprovisioned
      - --node-id=1
      - --smp=1
      - --memory=1G
      - --reserve-memory=0M
      - --check=false
    ports:
      - "9092:9092"
    environment:
      KAFKA_BROKER: ${KAFKA_BROKER}
    volumes:
      - redpanda_data:/var/lib/redpanda/data

  ##############################################################################
  # USER SERVICE (Django REST API)
  ##############################################################################
  user-service:
    image: ${DOCKER_REGISTRY_HOST}/user-service:${DEFAULT_IMAGE_TAG}
    container_name: user-service
    restart: always
    env_file: env/vps.env
    depends_on:
      - postgres
      - redis
      - minio
    ports:
      - "8001:8001"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.user.rule=Host(`vps.local`) && PathPrefix(`/api/user`)"
      - "traefik.http.services.user.loadbalancer.server.port=8001"

  ##############################################################################
  # FEED SERVICE (FastAPI)
  ##############################################################################
  feed-service:
    image: ${DOCKER_REGISTRY_HOST}/feed-service:${DEFAULT_IMAGE_TAG}
    container_name: feed-service
    restart: always
    env_file: env/vps.env
    depends_on:
      - postgres
      - redis
      - kafka
    ports:
      - "8002:8002"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.feed.rule=Host(`vps.local`) && PathPrefix(`/api/feed`)"
      - "traefik.http.services.feed.loadbalancer.server.port=8002"

  ##############################################################################
  # WORKER (Celery)
  ##############################################################################
  worker:
    image: ${DOCKER_REGISTRY_HOST}/worker:${DEFAULT_IMAGE_TAG}
    container_name: worker
    restart: always
    env_file: env/vps.env
    depends_on:
      - redis
      - postgres
      - user-service
    command: >
      sh -c "celery -A tasks worker --loglevel=INFO"

  ##############################################################################
  # FRONTEND (NextJS)
  ##############################################################################
  frontend:
    image: ${DOCKER_REGISTRY_HOST}/frontend:${DEFAULT_IMAGE_TAG}
    container_name: frontend
    restart: always
    env_file: env/vps.env
    ports:
      - "3000:3000"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.frontend.rule=Host(`vps.local`)"
      - "traefik.http.services.frontend.loadbalancer.server.port=3000"

################################################################################
# VOLUMES
################################################################################
volumes:
  postgres_data:
  redis_data:
  minio_data:
  redpanda_data:
